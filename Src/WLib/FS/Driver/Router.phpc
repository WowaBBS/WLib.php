  $Loader->Parent_Class('/FS/Driver/Base');
 
  Class C_FS_Driver_Router Extends C_FS_Driver_Base
  {
    Var $Base       = False;
    Var $RouterFile ='location.php';
    Var $LHash      =   [] ;
 
  /*
