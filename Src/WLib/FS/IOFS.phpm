  // Загружает текстовый файл
  Function LoadText($FileName)
  {
    If(!($fh=@FOpen($FileName, 'r')))
      Return False;
    $Res='';
    While(!FEof($fh))
      $Res.=Str_Replace("\r", '', FRead($fh, 256*256));
    FClose($fh);
    Return $Res;
  }
 
  // Загружает бинарный файл
  Function LoadFile($FileName)
  {
    If(!($fh=@FOpen($FileName, 'r')))
      Return False;
    $Res='';
    While(!FEof($fh))
      $Res.=FRead($fh, 256*256);
    FClose($fh);
    Return $Res;
  }
 
  // Сохраняет бинарный файл
  Function SaveFile($FileName, $Data, $Mode='w')
  {
    If(!($fh=@FOpen($FileName, $Mode)))
      Return False;
    $Res=FWrite($fh, $Data)==StrLen($Data);
    FClose($fh);
    Return $Res;
  }
 
 
  Function SaveText($FileName, $Data) { Return SaveFile($FileName, $Data); } // Сохраняет текстовый файл
  Function AddFile($FileName, $Data) { Return SaveFile($FileName, $Data, 'a+'); } // Добавляет в бинарный файл
  Function AddText($FileName, $Data) { Return SaveFile($FileName, $Data, 'a+'); } // Добавляет в текстовый файл
 
