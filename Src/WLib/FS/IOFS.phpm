  Function FindFile($List, $Path='', &$RPath='')
  {
    $L=Array_Shift($List);
    If($List)
    {
      ForEach($L As $V)
        If($Res=FindFile($List, $Path.$V, $RPath))
          Return $Res;
      Return False;
    }
  
    ForEach($L As $V)
      If(Is_File($Path.$V))
        Return $Path.$V;
      
    Return False;
  }
 
