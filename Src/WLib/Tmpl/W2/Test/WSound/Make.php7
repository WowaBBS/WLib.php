    Array('Effect'  ,'/WSound/Effect/item.cpp'        ,'WSound/Effect/{Var:CPP}.cpp'   ),
    Array('Effect'  ,'/WSound/Effect/item.h'          ,'WSound/Effect/{Var:CPP}.h'     ),
