<?
  $Loader->Load_Class('/XML/Tag' );
 
  Class C_XML_Tag_Comment Extends C_XML_Tag
  {
    Var $tagName     ='#comment'; // Имя тега
    Var $value       ; // Содержимое
 
    Function _Init($Args)
    {
      Parent::_Init($Args);
    //$this->tagName='#comment';
      $this->value=$Args[0];
    }
  
    Function TagBuild()
    {
      Return '<!--'.$this->value.'-->';
    }
  
    Function TagBuildHash()
    {
      Return ['t'=>'c', 'v'=>$this->value];
    }
  }
?>