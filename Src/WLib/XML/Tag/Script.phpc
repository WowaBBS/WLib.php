<?
  $Loader->Load_Class('/XML/Tag');
 
  Class C_XML_Tag_Script Extends C_XML_Tag
  {
    Var $tagName     ='#script'; // Имя тега
    Var $value       ; // Содержимое
  
    Function _Init($Args)
    {
      parent::_Init($Args);
    //$this->tagName='#script';
      $this->value=$Args[0];
    }
  
    Function TagBuild()
    {
      Return '<?'.$this->value.'?>';
    }
  
    Function TagBuildHash()
    {
      Return Array('t'=>'s', 'v'=>$this->value);
    }
  }
?>